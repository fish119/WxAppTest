<view class="search-container">
    <input type="text" bindinput="searchInputEvent" placeholder="输入书名搜索" />
    <icon bindtap="searchClickEvent" type="search" size="20" />
</view>
<scroll-view scroll-y="true" style="width:100%;position:relative;top:40px;height:{{scrollHeight}}px" bindscrolltolower="scrollLowerEvent">
    <view style="text-align:center;padding-top:50rpx;" wx:if="{{!loadingMore && totalRecord == 0 && !isInit}}">
        <icon type="cancel" color="red" size="40" />
        <view>
            <text>没有找到相关图书</text>
        </view>
    </view>
    <view style="text-align:center;padding-top:50rpx;" wx:if="{{isInit}}">
        <icon type="search" size="60" />
        <view>
            <text>豆瓣图书</text>
        </view>
    </view>
    <view class="header" wx:if="{{totalRecord > 0 && !isInit}}">
        <text>图书 {{totalRecord}}本图书</text>
    </view>
    <view class="common-list" wx:if="{{totalRecord > 0}}">
        <block wx:for="{{pageData}}">
            <view class="list-item" data-bid="{{item.id}}" bindtap="toDetailPage">
                <view class="index-list-item">
                    <view class="cover">
                        <image class="cover-img" src="{{item.image}}"></image>
                    </view>
                    <view class="content">
                        <view class="title">{{item.title}}</view>
                        <text class="desc">{{item.rating.average}}/
                            <block wx:for="{{item.author}}" wx:for-item="it">{{it}}/</block>{{item.pubdate}}</text>
                    </view>
                </view>
            </view>
        </block>
    </view>
    <view class="refresh-footer" wx:if="{{loadingMore}}">
        <icon type="waiting" size="30" color="{{footerIconColor}}" />
    </view>
</scroll-view>
